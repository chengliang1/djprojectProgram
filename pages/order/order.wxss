.start{  
  display: inline-block;
  width: 82%;
  height: 6vh;
  margin-left: 8px;
  background:none;  
  outline:none;  
  border:1px solid #ccc;
}
input:focus{   
  border:none;
}
.content{
  width: 400px;
  height: 28vh;
  margin-top: 14px;
  margin-left: 7px;
  background-color: #F7F7F7;
}
.common{
  width: 100%;
  height: 25%;
}
.time_letter{
  display: block;
  float: left;
  font-weight: bold;
  line-height: 7vh;
}
.time-picker{
  width: 300px;
  height: 5vh;
  margin-top: 5px;
  margin-left: 20px;
  float: left;
  color: grey;
  line-height: 5.5vh;
}
.cirle{
  width: 30px;
  height: 30px;
}

.main{
 margin-left: 7px;
  width: 98%;
  height: 14vh;
  margin-top: 5px;
  background-color: #F7F7F7;
  border: 1px #ccc solid;
  border-radius: 10px;
  padding-top: 10px;
}
.footer{
  width: 100%;
  height: 33%;
  line-height: 31px;
}
.imp{
  font-weight: bold;
  color: blue;
}
.tmp{
  font-weight: bold;
  color: red;
}
.pri{
  font-weight: bold;
  color: green;
}
.information{
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background-color: #ffffff;
  position: absolute;
  top: 15px;
  left: 15px;
}
.appointment{
  margin-top: 5px;
}

/** <cover-view> 里面css**/
.person{
  width: 25px;
  height: 25px;
  position: relative;
  left: 12px;
  top: 12px;
}