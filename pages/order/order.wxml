<view class="page-body">
  <view class="page-section page-section-gap">
    <map id="qqMap" style="width: 100%; height: 300px;"  latitude="{{latitude}}" longitude="{{longitude}}"  markers="{{markers}}"  scale="16" bindregionchange="mapChange" show-location="true"></map>
  </view>
  <view class="btn-area">
    出发地：<input class="start" value="{{mobileLocation.name}}" placeholder="您的位置" type="text" bindtap="moveToLocation"/>
    目的地：<input class="start" value="{{mobileLocation1.name}}" type="text" bindtap="moveToLocation1"/>

    <view class="main" style="display:{{show}}">
        {{distance}}
    </view>
    <button bindtap="driving">呼叫司机</button>
    
  </view>
</view>
