/* pages/payment/payment.wxss */
Page{
  margin: 0;
  padding: 0;
}
.main{
  width: 100%;
  height: 100vh;
}
.driver_info{
  width: 100%;
  height: 20vh; 
}
.driver{
  width: 90px;
  height: 90px;
  border-radius: 50px;
  float: left;
  position: absolute;
  top: 10px;
  left: 16px;
  background-color: #F7F7F7;
}
.driver_img{
  width: 86px;
  height: 86px;
}
.letter{
  width: 190px;
  height: 12vh;
  float: left;
  position: absolute;
  top: 10px;
  left: 116px;
}
.master{
  width: 100%;
  height: 35px;
  font-weight: bold;
  font-size: 19px;
  line-height: 35px;
}
.brand{
  width: 100%;
  height: 24px;
  font-size: 17px;
  line-height: 16px;
  color: #696969;
}
.evaluation{
  width: 100%;
  height: 25px;
}
.star{
  height: 30rpx;
  width: 30rpx;
  display: inline-block
}
.score{
  margin-left: 10px;
  display: inline-block;
  width: 30px;
  height: 20px;
  text-align: center;
  background-color: orange;
  border-radius: 5px;
  color: #ffffff;
}
.order_num{
  margin-left: 10px;
}
.phone{
  width: 50px;
  height: 50px;
  position: absolute;
  top: 27px;
  right: 24px;
  border-radius: 25px;
  border: 1px orange solid;
}
.phone_img{
  width: 40px;
  height: 40px;
  position: relative;
  top: 5px;
  right: -6px;
}
.fare{
  width: 65%;
  height: 30vh;
  margin: 0 auto;
}
.common{
  width: 100%;
  height: 5vh;
  border: 1px solid #ffffff;
}
.price_one{
  display: block;
  text-align: center;
  color: gray;
  line-height: 35px;
}
.price_two1{
  display: inline-block;
  line-height: 35px;
}
.price_two2{
  line-height: 35px;
  float: right;
}
.price_three1{
  display: inline-block;
  line-height: 35px;
  color: #696969;
}
.price_three2{
  line-height: 35px;
  float: right;
}
.price_four1{
  display: inline-block;
  line-height: 35px;
  color: #FF8600;
}
.price_four2{
  float: right;
  line-height: 35px;
  color: #FF8600;
}
.price_four3{
  line-height: 35px;
  color: #FF8600;
  margin-left: 138px;
}
.price_four{
  float: right;
  width: 25px;
  height: 25px;
  margin-top: 5px;
}
.footer{
  width: 65%;
  height: 22vh;
  margin: 0 auto;
}
.wqz_img{
  float: left;
  width: 30px;
  height: 30px;
}
.wqz_let{
  color: #696969;
  margin-left: 5px;
  float: left;
  line-height: 35px;
}
.choose{
  float: right;
  margin-top: 5px;
}
.payment{
  font-size: 20px;
  height: 55px;
  background-color: #FF8600;
  color: #ffffff;
  line-height: 42px;
  margin-top: 13vh;
  border-radius: 10px;
}

